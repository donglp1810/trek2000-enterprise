<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/title_page_indicator_in_group_feed_fragment"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="0.05"
        android:background="@color/gray_light_hint"
        android:textColor="@color/gray"
        app:footerColor="@color/gray"
        app:footerLineHeight="1dp"
        app:footerIndicatorHeight="3dp"
        app:footerIndicatorStyle="underline"
        app:selectedColor="@color/black_text_in_action_bar"
        app:selectedBold="true"
        app:topPadding="20dp"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_in_group_feed_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        />
</LinearLayout>
