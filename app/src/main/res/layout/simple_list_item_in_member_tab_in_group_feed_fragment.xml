    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleiv_item_in_simple_list_item_in_member_tab_in_group_feed_fragment"
        android:layout_height = "70dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/iv_default_avatar" />

    <LinearLayout
        style="@style/LinearLayout__Vertical_MatchParent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.3">

        <TextView
            android:id="@+id/tv_member_name_in_simple_list_item_in_member_tab_in_group_feed_fragment"
            style="@style/TextView__Title"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="Johune Laxerre"
            android:textStyle="bold" />

        <LinearLayout style="@style/LinearLayout__Horizontal_MatchParent">

            <ImageView
                android:id="@+id/iv_photo_in_simple_list_item_in_member_tab_in_group_feed_fragment"
                style="@style/ImageView__MatchParent"
                android:layout_weight="1.3"
                android:src="@drawable/iv_photos" />

            <TextView
                android:id="@+id/tv_photo_number_in_simple_list_item_in_member_tab_in_group_feed_fragment"
                style="@style/TextView__Content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="24 photos"/>

            <TextView
                style="@style/TextView__Content"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:text="|" />

            <ImageView
                android:id="@+id/iv_video_in_simple_list_item_in_member_tab_in_group_feed_fragment"
                style="@style/ImageView__MatchParent"
                android:layout_weight="1.3"
                android:src="@drawable/iv_videos" />

            <TextView
                android:id="@+id/tv_video_number_in_simple_list_item_in_member_tab_in_group_feed_fragment"
                style="@style/TextView__Content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="586 videos"/>

        </LinearLayout>

        <ImageView
            style="@style/ImageView_Line"
            android:layout_weight="1.95"
            android:alpha="0.5"
            android:src="@color/gray_dark_in_under_action_bar" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ibtn_delete_in_simple_list_item_in_member_tab_in_group_feed_fragment"
        style="@style/ImageButton__MatchParent"
        android:layout_weight="1"
        android:src="@drawable/ibtn_next"
        android:visibility="invisible"/>

</LinearLayout>