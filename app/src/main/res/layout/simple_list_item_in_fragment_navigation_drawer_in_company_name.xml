<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout__Horizontal_MatchParent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/iv_in_simple_list_item_in_fragment_navigation_drawer_in_company_name"
        style="@style/ImageView__MatchParent"
        android:layout_weight="1.3"
        android:padding="5dp"
        android:src="@drawable/iv_feeds_unselected" />

    <LinearLayout
        style="@style/LinearLayout__Vertical_WrapContent"
        android:layout_weight="0.4">

        <LinearLayout
            style="@style/LinearLayout__Horizontal_WrapContent"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/tv_title_in_simple_list_item_in_fragment_navigation_drawer_in_company_name"
                style="@style/TextView__Title"
                android:layout_height="70dp"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:text="Feeds"
                android:textColor="@android:color/white" />

            <LinearLayout
                style="@style/LinearLayout__Horizontal_MatchParent"
                android:layout_weight="1.5">

                <ImageView
                    style="@style/ImageView_Line"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/tv_number_of_notifications_in_fragment_navigation_drawer_in_company_name"
                    style="@style/TextView__Content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/custom_tv_number_of_notifications"
                    android:text="326"
                    android:textColor="@color/gray_light_hint" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            style="@style/ImageView_Line"
            android:layout_height="1dp"
            android:background="@color/gray_light_line" />

    </LinearLayout>


</LinearLayout>